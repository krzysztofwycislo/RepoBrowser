<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="RepoBrowser" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="SearchViewStyle">
        <item name="android:background">@drawable/search_view_background</item>
        <item name="android:drawableStart">@drawable/ic_search_icon</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="SearchTitleTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_large_100</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">41sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ListTitleTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RepositoryListItemText">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

</resources>