<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RepoBrowser" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:editTextColor">@color/black</item>

        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <!--    EditTexts     -->

    <style name="SearchEditTextViewStyle">
        <item name="android:background">@drawable/background_search_view</item>
        <item name="android:drawableStart">@drawable/ic_search_icon</item>
        <item name="android:drawablePadding">10dp</item>
    </style>


    <!--    TextViews     -->

    <style name="SearchTitleTextViewStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_large_100</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">41sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ListTitleTextViewStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RepositoryListItemTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>


    <!--    Buttons     -->

    <style name="BackButtonStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:background">@android:color/transparent</item>
        <item name="icon">@drawable/ic_back_icon</item>
        <item name="android:minHeight">0dp</item>  <!-- needed to affect insets -->
        <item name="android:minWidth">0dp</item>  <!-- needed to affect insets -->
        <item name="android:inset">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/ButtonTextAppearance</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="ViewOnlineButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/accent</item>
        <item name="android:minHeight">0dp</item>  <!-- needed to affect insets -->
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAppearance">@style/ButtonTextAppearance</item>
        <item name="shapeAppearance">@style/ViewOnlineButtonShapeAppearance</item>
    </style>

    <style name="ShareRepoButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/accent</item>
        <item name="icon">@drawable/ic_share_icon</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/accent</item>
        <item name="android:textAppearance">@style/ButtonTextAppearance</item>
        <item name="shapeAppearanceOverlay">@style/ShareRepoButtonShapeAppearance</item>
    </style>


    <!--    Shape Appearances     -->

    <style name="ViewOnlineButtonShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">17dp</item>
    </style>

    <style name="ShareRepoButtonShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>


    <!--    Text Appearances     -->

    <style name="ButtonTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>


</resources>